<!doctype html>
<html lang="de">
<head>
	<title>TO-DO Liste</title>
	
	<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	
	<!-- jsDelivr  CSS -->
	<link 
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
		rel="stylesheet" 
		crossorigin="anonymous" >

	
</head>
<style>
	.btn{
		margin: 10px;
		/* background-color: rgb(100, 164, 100);  geht nicht ? */
	}
	/* #impressum{
		padding-top: 350px;
	} */
</style>
<body>

<div class="container-fluid">
	<div class="display-2">
		TODO Liste
	</div>

<table class="table">
	<thead>
	  <tr>
		<th >Name</th>
		<th >Deadline</th>
		<th >Fortschritt</th>
		<th> <a href="/new"  class="btn btn-success" >  neues TODO </a>  </th>

	  </tr>
	</thead>
    
	<tbody>
        <%if(data){%>
         <%data.forEach((todo)=> {%>
                <tr>
                    
                    <td> <%=todo.name%> </td>
                    <td> <%=todo.date%> </td>
                    <td> <%=todo.progress%> %</td>
					<td>  <a href="/edit/<%=todo.id%>"  class="btn btn-info" >  edit </a> 
						<a href="/deleteUser/<%=todo.id%>"  class="btn btn-danger" >  delete </a>   </td>
                </tr>

             <%})%>
        <%}%>

